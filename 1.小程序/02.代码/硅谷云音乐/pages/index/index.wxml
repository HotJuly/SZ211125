<view class="indexContainer">
    <swiper 
    class="bannerSwiper"
    indicator-dots
    indicator-active-color="#d43c33"
    circular
    autoplay
    >
        <!-- <swiper-item v-for="(item,index) in arr" :key="item.id" class="bannerItem">
            <image class="bannerImg" src="/static/images/dazuo.jpeg"></image>
        </swiper-item> -->

        <swiper-item 
        class="bannerItem"
        wx:for="{{banners}}"
        wx:for-item="banner"
        wx:key="id"
        >
            <image class="bannerImg" src="{{banner.pic}}"></image>
        </swiper-item>
    </swiper>

    <!-- 导航区域 -->
    <view class="nav">
        <view class="navItem"> 
            <view class="iconfont icon-meirituijian-"></view>
            <text class="navTitle">每日推荐</text>
        </view>
        <view class="navItem"> 
            <view class="iconfont icon-gedan1"></view>
            <text class="navTitle">每日推荐</text>
        </view>
        <view class="navItem"> 
            <view class="iconfont icon-icon-ranking"></view>
            <text class="navTitle">每日推荐</text>
        </view>
        <view class="navItem"> 
            <view class="iconfont icon-diantai"></view>
            <text class="navTitle">每日推荐</text>
        </view>
        <view class="navItem"> 
            <view class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></view>
            <text class="navTitle">每日推荐</text>
        </view>
    </view>

    <!-- 推荐歌曲区域 -->
    <view class="recommendContainer">
        <view class="header">
            <view class="title">推荐歌曲</view>
            <view class="moreContent">
                <view class="moreTitle">为你精心推荐</view>
                <view class="more">查看更多</view>
            </view>
        </view> 
        <scroll-view 
        class="recommendScroll"
        enable-flex
        scroll-x
        >
            <view 
            class="recommendItem"
            wx:for="{{recommendList}}"
            wx:key="id"
            >
                <image 
                class="recommendImg" 
                src="{{item.picUrl}}"
                ></image>
                <view class="recommendTitle">{{item.name}}</view>
            </view>
        </scroll-view>
    </view>
</view>